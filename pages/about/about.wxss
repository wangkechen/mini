.page {
  min-height: 100vh;
  background: #fff;
}

/* 顶部背景区域 */
.header {
  position: relative;
  height: 320rpx;
  overflow: hidden;
}

.header-bg {
  width: 100%;
  height: 100%;
  filter: brightness(0.8);
}

.header-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  padding: 0 30rpx;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
}

.company-name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.slogan {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content {
  position: relative;
  margin-top: -30rpx;
  padding: 0 24rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.block {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.block:last-child {
  border-bottom: none;
  padding-bottom: 40rpx;
}

.block-title {
  margin-bottom: 16rpx;
}

.title-text {
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  padding-left: 20rpx;
}

.title-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #07C160 0%, #10B981 100%);
  border-radius: 3rpx;
}

.block-content {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
}

.intro {
  display: block;
}

/* 联系方式列表 */
.contact-list {
  padding: 0 6rpx;
}

.contact-item {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.icon-wrap {
  width: 56rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  flex-shrink: 0;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.info {
  flex: 1;
}

.label {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 2rpx;
}

.value {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
  word-break: break-all;
}

/* 关注我们 */
.follow-section {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.follow-item {
  text-align: center;
  flex: 1;
  margin: 0 20rpx;
}

.qrcode {
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 0 auto;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
  margin-bottom: 16rpx;
}

.follow-label {
  display: block;
  font-size: 26rpx;
  color: #666;
}
